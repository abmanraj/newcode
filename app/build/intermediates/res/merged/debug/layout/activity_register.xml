<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cb151873"
    tools:context="com.smit.sporticlan.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/spoticlan"
            android:layout_marginTop="20dp"
            android:padding="10dp"

            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Full name"
                android:singleLine="true"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/nameicon"
                android:drawableStart="@drawable/nameicon"
                android:textSize="20dp"
                android:textColorHint="#aa090a0a"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableLeft="@drawable/emailicon"
                android:textSize="20dp"
                android:padding="10dp"
                android:singleLine="true"
                android:drawableStart="@drawable/emailicon"
                android:drawablePadding="10dp"
                android:textColorHint="#aa030303"
                android:id="@+id/email"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:drawableLeft="@drawable/phoneicon"
                android:textSize="20dp"
                android:singleLine="true"
                android:drawableStart="@drawable/phoneicon"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#aa030303"
                android:id="@+id/phone"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#fcfcfc"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/gen"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20dp"
                android:textColor="#fcfcfc"
                android:layout_marginLeft="13dp"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20dp"
                android:textColor="#fcfcfc"
                android:layout_marginLeft="100dp"
                />

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:hint="Address"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/home"
                android:drawableStart="@drawable/home"
                android:textSize="20dp"
                android:textColorHint="#aa090a0a"
                android:maxLines="4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableLeft="@drawable/lockicon"
                android:textSize="20dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#aa030303"
                android:id="@+id/pass"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawableStart="@drawable/lockicon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="#fcfcfc"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/lockicon"
                android:textSize="20dp"
                android:padding="10dp"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:textColorHint="#aa030303"
                android:drawableStart="@drawable/lockicon"
                android:id="@+id/pass1"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Register"
            android:textSize="20dp"
            android:textColor="#fcfcfc"
            android:id="@+id/Register"
            android:background="@drawable/sq"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"

            />

    </LinearLayout>

</ScrollView>
